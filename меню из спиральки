		system("cls");
		printf("1) Cпираль, скручивающаяся по часовой стрелке  "); if (key == 1) printf("<=="); cout << endl;
		printf("2) Спираль, скручивающаяся против часовой стрелки  "); if (key == 2) printf("<=="); cout << endl;
		printf("3) Спираль, скручивающаяся изнутри по часовой стрелке  "); if (key == 3)printf("<=="); cout << endl;
		printf("4) Спираль, скручивающаяся изнутри против часовой стрелки  "); if (key == 4)printf("<=="); cout << endl;
		printf("5) Сохранить спираль в файл  "); if (key == 5)printf("<=="); cout << endl;
		printf("6) Загрузить спираль из файла  "); if (key == 6)printf("<=="); cout << endl; 
    
    
