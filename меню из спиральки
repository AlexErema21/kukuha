    		cin.clear();
		ch = _getch();
		if (ch == 224) {
			ch = _getch();
		}
		switch (ch)
		{
		case 49:
			key = 1;
			break;
		case 50:
			key = 2;
			break;
		case 51:
			key = 3;
			break;
		case 52:
			key = 4;
			break;
		case 53:
			key = 5;
			break;
		case 54:
			key = 6;
			break;
		case 80:key++; if (key > 6)key = 1;
			break;
		case 72:key--; if (key < 1)key = 6;
			break;
		default:
			break;
		}
